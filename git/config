[alias]
  br   = branch
  co   = checkout
  di   = diff
  dis  = diff --staged
  fa   = fetch --all --prune
  gi   = grep -i
  root = rev-parse --show-toplevel
  st   = status

[branch]
  autoSetupRebase = always

[diff]
  algorithm = histogram

[grep]
  lineNumber = true

[init]
  defaultBranch = main

[merge]
  conflictStyle = zdiff3

[pull]
  ff = only

[push]
  followTags = true

