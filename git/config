[alias]
  br   = branch
  co   = checkout
  di   = diff
  dis  = diff --staged
  fa   = fetch
  gi   = grep -i
  root = rev-parse --show-toplevel
  st   = status

[branch]
  autoSetupRebase = always
  sort            = -committerdate

[column]
  ui = auto

[diff]
  algorithm      = histogram
  colorMoved     = plain
  mnemonicPrefix = true
  renames        = true

[fetch]
  all       = true
  prune     = true
  pruneTags = true

[grep]
  lineNumber = true

[init]
  defaultBranch = main

[merge]
  conflictStyle = zdiff3

[pull]
  ff = only

[push]
  autoSetupRemote = true
  followTags      = true

[tag]
  sort = version:refname

[user]
  name = Grégoire Duchêne
